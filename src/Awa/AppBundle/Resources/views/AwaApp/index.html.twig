{% extends '::base.html.twig' %}

{% block body -%}
    <h1>AwaApp list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Datecreate</th>
                <th>Datemodify</th>
                <th>Numviews</th>
                <th>Numgo</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('awaapp_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.description }}</td>
                <td>{% if entity.dateCreate %}{{ entity.dateCreate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.dateModify %}{{ entity.dateModify|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.numViews }}</td>
                <td>{{ entity.numGo }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('awaapp_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('awaapp_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('awaapp_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
