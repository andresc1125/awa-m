{% extends '::base.html.twig' %}

{% block body -%}
    <h1>AwaApp</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Datecreate</th>
                <td>{{ entity.dateCreate|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Datemodify</th>
                <td>{{ entity.dateModify|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Numviews</th>
                <td>{{ entity.numViews }}</td>
            </tr>
            <tr>
                <th>Numgo</th>
                <td>{{ entity.numGo }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('awaapp') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('awaapp_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('awaapp_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
